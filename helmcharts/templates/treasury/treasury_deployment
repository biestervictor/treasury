apiVersion: apps/v1
kind: Deployment
metadata:
  name: treasury
  namespace: {{ .Values.treasury.nameSpace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: treasury
  template:
    metadata:
      labels:
        app: treasury
    spec:
      imagePullSecrets:
        - name: regcred
      containers:
        - name: treasury
          image: ghcr.io/biestervictor/treasury:2cd820a3523764ad63828c570b7162ba3a9c50ff
          command: ["java", "-jar", "app.jar"]
          args: ["--spring.profiles.active=kubitos"]
          ports:
            - containerPort: 8080